# frozen_string_literal: true

FactoryBot.define do
  factory :<%= table_name %>, class: "ActiveBrainz::<%= class_name %>" do
    <%- Array(primary_key).reject { |p| p == "id"}.each do |key| -%>
    sequence(:<%= key %>)
    <%- end -%>
    <%- if gid? -%>
    gid { FFaker::Guid.guid }
    <%- end -%>
    <%- if filtered_references.any? -%>

    <%- filtered_references.each do |ref| -%>
    <%- if ref.type == :has_many -%>
    <%= ref.name %> { build_list(:<%= ref.to_table %>, 3) }
    <%- else -%>
    association :<%= ref.name %>, factory: :<%= ref.to_table %>
    <%- end -%>
    <%- end -%>
    <%- end -%>
    <%- if filtered_attributes.any? -%>

    <%- filtered_attributes.each do |attr| -%>
    <%= attr.name %> { FFaker::Lorem.word }
    <%- end -%>
    <%- if begin_end_date? %>

    transient do
      begin_date { [FFaker::Time.date, nil].sample }
    end

    begin_date_year { begin_date&.year }
    begin_date_month { begin_date&.month }
    begin_date_day { begin_date&.day }

    transient do
      end_date { [FFaker::Time.date, nil].sample }
    end

    end_date_year { end_date&.year }
    end_date_month { end_date&.month }
    end_date_day { end_date&.day }

    ended { end_date.present? }
    <%- end -%>
    <%- end -%>
    <%- if child_order? -%>

    sequence(:child_order)

    trait :with_parent do
      <%= table_name %>_parent { build(:<%= table_name %>) }
    end

    trait :with_children do
      <%= table_name %>_children { build_list(:<%= table_name %>, 3) }
    end
    <%- end -%>
  end
end
